{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center">Course LIST</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('course_add') }}">ADD Course</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				{% for course in courses %}
					<tr>
						<td>{{ course.id }}</td>
						<td>
							<a class="text-info" href="{{ path('course_detail', {'id': course.id}) }}">
								{{ course.name }}
							</a>
						</td>
						<td>
                        {% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-info" href="{{ path('course_edit', {'id': course.id}) }}">EDIT</a>
							<a class="btn btn-warning" href="{{ path('course_delete', {'id': course.id}) }}" onclick="return confirm('Are you sure to delete this course ?')">DELETE</a>
                        {% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}