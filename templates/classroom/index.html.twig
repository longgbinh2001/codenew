{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center">Class LIST</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('classroom_add') }}">ADD Classroom</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				{% for class in classrooms %}
					<tr>
						<td>{{ class.id }}</td>
			
                        <td>
							<a class="text-info" href="{{ path('classroom_detail', {'id': class.id}) }}">
								{{ class.name }}
							</a>
						</td>
						<td>
                        {% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-info" href="{{ path('classroom_edit', {'id': class.id}) }}">EDIT</a>
							<a class="btn btn-warning" href="{{ path('classroom_delete', {'id': class.id}) }}" onclick="return confirm('Are you sure to delete this class
                             ?')">DELETE</a>
                            {% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}